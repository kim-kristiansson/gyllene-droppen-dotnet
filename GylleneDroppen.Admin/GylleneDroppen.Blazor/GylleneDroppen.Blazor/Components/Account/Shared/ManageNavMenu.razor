@using GylleneDroppen.Core.Entities
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

<ul>
    <li>
        <NavLink href="konto/hantera" Match="NavLinkMatch.All">Profil</NavLink>
    </li>
    <li>
        <NavLink href="konto/hantera/epost">E-post</NavLink>
    </li>
    <li>
        <NavLink href="konto/hantera/byt-losenord">Lösenord</NavLink>
    </li>
    @if (hasExternalLogins)
    {
        <li>
            <NavLink href="konto/hantera/externa-inloggningar">Externa inloggningar</NavLink>
        </li>
    }
    <li>
        <NavLink href="konto/hantera/personuppgifter">Personuppgifter</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }

}