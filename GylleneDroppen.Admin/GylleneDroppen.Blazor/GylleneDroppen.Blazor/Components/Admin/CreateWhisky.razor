@page "/admin/whiskies/create"
@using GylleneDroppen.Application.Interfaces.Services
@using GylleneDroppen.Application.Dtos.Whisky
@using GylleneDroppen.Core.Constants
@using Microsoft.AspNetCore.Authorization
@using GylleneDroppen.Blazor.Components.Shared

@inject IWhiskyService WhiskyService
@inject NavigationManager NavigationManager

@attribute [Authorize(Policy = "AdminOnly")]
@rendermode InteractiveServer

<PageTitle>L√§gg till Whisky</PageTitle>

<div class="create-whisky-container">
    <div class="create-whisky-header">
        <h1>ü•É L√§gg till Whisky</h1>
        <button @onclick="GoBack" class="back-button">‚Üê Tillbaka till √∂versikt</button>
    </div>

    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="status-message @(statusMessage.StartsWith("Fel:") ? "error" : "success")">
            <span><strong>@(statusMessage.StartsWith("Fel:") ? "Fel" : "Info"):</strong> @statusMessage</span>
            <button @onclick="() => statusMessage = string.Empty">‚úï</button>
        </div>
    }

    <EditForm Model="whiskyDto" OnValidSubmit="SubmitCreateWhiskyAsync" class="whisky-form">
        <DataAnnotationsValidator/>
        <ValidationSummary class="validation-summary"/>

        <fieldset class="form-fieldset">
            <legend>üì∏ Bild</legend>
            <div class="image-section">
                <ImageUpload CurrentImagePath="@currentImagePath"
                             OnImageUploaded="HandleImageUploaded"
                             OnImageRemoved="HandleImageRemoved"/>
            </div>
        </fieldset>

        <fieldset class="form-fieldset">
            <legend>‚ÑπÔ∏è Grundinformation</legend>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label required-field">Namn:</label>
                    <InputText @bind-Value="whiskyDto.Name" class="form-control" placeholder="T.ex. Macallan 18"/>
                    <ValidationMessage For="() => whiskyDto.Name" class="validation-message"/>
                </div>

                <div class="form-group">
                    <label class="form-label required-field">Destilleri:</label>
                    <InputText @bind-Value="whiskyDto.Distillery" class="form-control" placeholder="T.ex. Macallan Distillery"/>
                    <ValidationMessage For="() => whiskyDto.Distillery" class="validation-message"/>
                </div>
            </div>

            <div class="form-grid-3">
                <div class="form-group">
                    <label class="form-label required-field">Land:</label>
                    <InputSelect @bind-Value="whiskyDto.Country" class="form-control">
                        <option value="">V√§lj land</option>
                        @foreach (var country in WhiskyConstants.Countries)
                        {
                            <option value="@country">@country</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => whiskyDto.Country" class="validation-message"/>
                </div>

                <div class="form-group">
                    <label class="form-label">Region:</label>
                    <InputSelect @bind-Value="whiskyDto.Region" class="form-control">
                        <option value="">V√§lj region</option>
                        @foreach (var region in WhiskyConstants.CommonRegions)
                        {
                            <option value="@region">@region</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => whiskyDto.Region" class="validation-message"/>
                </div>

                <div class="form-group">
                    <label class="form-label required-field">Typ:</label>
                    <InputSelect @bind-Value="whiskyDto.Type" class="form-control">
                        <option value="">V√§lj typ</option>
                        @foreach (var type in WhiskyConstants.WhiskyTypes)
                        {
                            <option value="@type">@type</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => whiskyDto.Type" class="validation-message"/>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">√Ölder:</label>
                    <div class="number-input-group">
                        <InputNumber @bind-Value="whiskyDto.Age" class="form-control" placeholder="T.ex. 18"/>
                        <span class="input-suffix">√•r (l√§mna tomt f√∂r NAS)</span>
                    </div>
                    <ValidationMessage For="() => whiskyDto.Age" class="validation-message"/>
                </div>

                <div class="form-group">
                    <label class="form-label required-field">Alkoholhalt:</label>
                    <div class="number-input-group">
                        <InputNumber @bind-Value="whiskyDto.Abv" step="0.1" class="form-control" placeholder="T.ex. 43.0"/>
                        <span class="input-suffix">%</span>
                    </div>
                    <ValidationMessage For="() => whiskyDto.Abv" class="validation-message"/>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Pris:</label>
                    <div class="number-input-group">
                        <InputNumber @bind-Value="whiskyDto.Price" step="0.01" class="form-control" placeholder="T.ex. 2500.00"/>
                        <span class="input-suffix">kr (valfritt)</span>
                    </div>
                    <ValidationMessage For="() => whiskyDto.Price" class="validation-message"/>
                </div>

                <div class="form-group">
                    <label class="form-label">Flaskstorlek:</label>
                    <div class="number-input-group">
                        <InputNumber @bind-Value="whiskyDto.BottleSize" class="form-control" placeholder="T.ex. 700"/>
                        <span class="input-suffix">ml (valfritt)</span>
                    </div>
                    <ValidationMessage For="() => whiskyDto.BottleSize" class="validation-message"/>
                </div>
            </div>
        </fieldset>

        <fieldset class="form-fieldset tasting-notes">
            <legend>üç∑ Provningsanteckningar (valfritt)</legend>
            
            <div class="form-tip">
                L√§gg till dina provningsanteckningar f√∂r att hj√§lpa andra medlemmar f√∂rst√• whiskyn b√§ttre.
            </div>

            <div class="tasting-grid">
                <div class="form-group tasting-note">
                    <label class="form-label">F√§rg:</label>
                    <InputTextArea @bind-Value="whiskyDto.Color" rows="2" class="form-control form-textarea" 
                                   placeholder="T.ex. Djup mahogny med kopparreflexer"/>
                    <ValidationMessage For="() => whiskyDto.Color" class="validation-message"/>
                </div>

                <div class="form-group tasting-note">
                    <label class="form-label">Doft:</label>
                    <InputTextArea @bind-Value="whiskyDto.Nose" rows="3" class="form-control form-textarea" 
                                   placeholder="T.ex. Rik med toner av sherry, m√∂rka frukter och kryddor"/>
                    <ValidationMessage For="() => whiskyDto.Nose" class="validation-message"/>
                </div>

                <div class="form-group tasting-note">
                    <label class="form-label">Smak:</label>
                    <InputTextArea @bind-Value="whiskyDto.Palate" rows="3" class="form-control form-textarea" 
                                   placeholder="T.ex. Fyllig och komplex med torkad frukt, choklad och r√∂k"/>
                    <ValidationMessage For="() => whiskyDto.Palate" class="validation-message"/>
                </div>

                <div class="form-group tasting-note">
                    <label class="form-label">Eftersmak:</label>
                    <InputTextArea @bind-Value="whiskyDto.Finish" rows="3" class="form-control form-textarea" 
                                   placeholder="T.ex. L√•ng och varm med kryddig ek och m√∂rk choklad"/>
                    <ValidationMessage For="() => whiskyDto.Finish" class="validation-message"/>
                </div>
            </div>
        </fieldset>

        <div class="form-actions">
            <button type="button" @onclick="GoBack" class="btn-secondary">Avbryt</button>
            <button type="submit" disabled="@isProcessing" class="btn btn-primary">
                @(isProcessing ? "Skapar whisky..." : "Skapa whisky")
            </button>
        </div>
    </EditForm>
</div>

@code {
    private CreateWhiskyRequestDto whiskyDto = new();
    private bool isProcessing = false;
    private string statusMessage = string.Empty;
    private string? currentImagePath;

    private async Task SubmitCreateWhiskyAsync()
    {
        isProcessing = true;
        statusMessage = string.Empty;

        try
        {
            var createdWhisky = await WhiskyService.CreateWhiskyAsync(whiskyDto);

            // Update image path if one was uploaded
            if (!string.IsNullOrEmpty(currentImagePath))
            {
                await WhiskyService.UpdateWhiskyImageAsync(createdWhisky.Id, currentImagePath);
            }

            NavigationManager.NavigateTo($"/whiskies/{createdWhisky.Id}");
        }
        catch (Exception ex)
        {
            statusMessage = $"Fel: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void HandleImageUploaded(string imagePath)
    {
        currentImagePath = imagePath;
        StateHasChanged();
    }

    private void HandleImageRemoved()
    {
        currentImagePath = null;
        StateHasChanged();
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/admin/whiskies");
    }

}