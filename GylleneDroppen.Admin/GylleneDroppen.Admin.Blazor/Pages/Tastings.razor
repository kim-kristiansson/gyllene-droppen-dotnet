@page "/tastings"
@attribute [Authorize(Policy = "RequireAdminRole")]

<PageTitle>Provningar - Gyllene Droppen Admin</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Provningar</h1>
    <button class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Ny provning
    </button>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Titel</th>
                    <th>Datum</th>
                    <th>Plats</th>
                    <th>Kapacitet</th>
                    <th>Pris</th>
                    <th>Åtgärder</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td colspan="6" class="text-center py-4">
                        <div class="text-muted">Inga provningar att visa</div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>